@page "{encodedId?}"
@model BlockOut.Pages.BusinessDeletionModel
@{
    ViewData["Title"] = "Delete Business";
}

<div class="main-container">
    <h1>Delete Business</h1>

    <p>Only the owner of the business can perform this action. Deleting a business cannot be undone.</p>

    <div class="form-group">
        <label>Business ID</label>
        <p class="form-control-plaintext">@Model.BusinessId</p>
    </div>

    <form method="post">
        <input type="hidden" name="EncodedId" value="@Model.EncodedId" />
        <div class="form-group">
            <label for="EnteredBusinessId">Confirm Business ID</label>
            <input type="text" id="EnteredBusinessId" name="EnteredBusinessId" class="form-control"
                   oninput="checkMatch()" required />
        </div>
        <button type="submit" id="DeleteButton" class="btn btn-danger" disabled>Delete Business</button>
        <a asp-page="/Dashboard" class="btn btn-secondary">Cancel</a>
    </form>

</div>

<script>
    function checkMatch() {
        const displayedId = "@Model.BusinessId";
        const enteredId = document.getElementById('EnteredBusinessId').value;
        const deleteButton = document.getElementById('DeleteButton');
        deleteButton.disabled = (enteredId !== displayedId);
    }
</script>
