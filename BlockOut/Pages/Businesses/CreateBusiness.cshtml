@page
@model BlockOut.Pages.Businesses.CreateBusinessModel
@{
    ViewData["Title"] = "Create New Business";
}

<h2>Create New Business</h2>

<form method="post">
    <!-- Business Name Input with Validation -->
    <div class="form-group">
        <label asp-for="Business.Name">Business Name</label>
        <input asp-for="Business.Name" class="form-control" />
        <span asp-validation-for="Business.Name" class="text-danger"></span>
        @if (Model.BusinessNameExists)
        {
            <span class="text-danger">The business already exists, please contact a manager to join.</span>
        }
    </div>

    <!-- User's Role - Automatically set as Owner -->
    <input type="hidden" asp-for="UserRole" value="Owner" />

    <!-- Open Hours Fields -->
    <h4>Business Open Hours</h4>
    <p>Set open and close times for each day.</p>

    @for (int i = 0; i < Model.DaysOfWeek.Length; i++)
    {
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">@Model.DaysOfWeek[i]</label>
            <div class="col-sm-4">
                <label>Open Time</label>
                <input type="time" asp-for="Business.OpenHours[i].OpenTime" class="form-control" />
            </div>
            <div class="col-sm-4">
                <label>Close Time</label>
                <input type="time" asp-for="Business.OpenHours[i].CloseTime" class="form-control" />
            </div>
        </div>
    }

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Create Business</button>
</form>

