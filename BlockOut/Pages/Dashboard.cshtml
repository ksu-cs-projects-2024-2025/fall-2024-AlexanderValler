@page
@model BlockOut.Pages.Dashboard.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<h2>Your Businesses</h2>

<div class="row">
    @foreach (var business in Model.UserBusinesses)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@business.Name</h5>
                    
                    <p class="card-text">
                        <!-- Badge to show the user's role in the business -->
                        <span class="badge bg-primary">@business.Role</span>
                    </p>

                    <!-- Button to view or manage the business -->
                    <a href="/Businesses/ViewBusiness?businessId=@business.Id" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
    }

    <!-- Create New Business Card -->
    <div class="col-md-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Create New Business</h5>
                <a href="/Businesses/CreateBusiness" class="btn btn-success">+ Create New Business</a>
            </div>
        </div>
    </div>
</div>
