@page
@model CreateScheduleModel
@{
    ViewData["Title"] = "Create Schedule";
}

<h2>Create a New Schedule</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Schedule.GroupName">Group Name (e.g., Business Name)</label>
        <input asp-for="Schedule.GroupName" class="form-control" />
        <span asp-validation-for="Schedule.GroupName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Schedule.Title">Schedule Title</label>
        <input asp-for="Schedule.Title" class="form-control" />
        <span asp-validation-for="Schedule.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Schedule.Date">Date</label>
        <input asp-for="Schedule.Date" type="date" class="form-control" />
        <span asp-validation-for="Schedule.Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Schedule.Time">Time</label>
        <input asp-for="Schedule.Time" type="time" class="form-control" />
        <span asp-validation-for="Schedule.Time" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Schedule</button>
</form>
